#!/bin/sh

# Ejecutar linters antes de permitir commit
echo "ğŸ” Ejecutando linters..."

# Lint JavaScript
if [ -f .eslintrc.json ] && [ -n "$(find ./app -name '*.js')" ]; then
  eslint ./app/**/*.js --quiet
  if [ $? -ne 0 ]; then
    echo "âŒ Error en ESLint - Commit bloqueado"
    exit 1
  fi
fi

# Lint CSS
if [ -f .stylelintrc.json ] && [ -n "$(find ./app -name '*.css')" ]; then
  stylelint "./app/**/*.css" --quiet
  if [ $? -ne 0 ]; then
    echo "âŒ Error en Stylelint - Commit bloqueado"
    exit 1
  fi
fi

# Lint HTML
if [ -f .htmlhintrc ] && [ -n "$(find ./app -name '*.html')" ]; then
  htmlhint "./app/**/*.html" --quiet
  if [ $? -ne 0 ]; then
    echo "âŒ Error en HTMLHint - Commit bloqueado"
    exit 1
  fi
fi

echo "âœ… Linters aprobados - Commit permitido"
exit 0